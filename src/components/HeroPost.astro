---
// src/components/HeroPost.astro
interface Post {
  title: string;
  date: string;
  tag: string;
  summary: string;
  link: string;
  image?: string; // Add image property
}

export interface Props {
  post: Post;
}

const { post } = Astro.props;

// Use a placeholder if no image is provided
const heroImage = post.image || 'https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80';
---

<section class="hero-post-section" style={`background-image: url(${heroImage});`}>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <div class="hero-meta">
      <span class="hero-tag">{post.tag}</span>
      <span class="hero-date">| {post.date}</span>
    </div>
    <h2 class="hero-title">
      <a href={post.link}>{post.title.toUpperCase()}</a>
    </h2>
    <p class="hero-summary">{post.summary.substring(0, 120)}...</p>
    <a href={post.link} class="hero-read-more">Read More &rarr;</a>
  </div>
</section>

<style>
.hero-post-section {
  position: relative;
  height: 70vh;
  min-height: 450px;
  max-height: 600px;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: flex-end; /* Align content to bottom */
  justify-content: center; /* Center content horizontally */
  text-align: center;
  color: #fff;
  border-radius: 16px; 
  overflow: hidden; 
  margin-bottom: 4rem; 
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    180deg,
    rgba(0, 0, 0, 0.1) 0%,
    rgba(0, 0, 0, 0.3) 40%,
    rgba(0, 0, 0, 0.7) 100%
  );
  z-index: 1;
}

.hero-content {
  position: relative;
  z-index: 2;
  padding: 2rem 3rem; 
  max-width: 700px; 
  margin-bottom: 2rem; 
}

.hero-meta {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
  font-size: 0.95rem;
  opacity: 0.9;
}

.hero-tag {
  font-weight: 600;
  background-color: rgba(255, 255, 255, 0.15);
  padding: 0.25rem 0.75rem;
  border-radius: 15px;
  font-size: 0.85rem;
}

.hero-date {
  color: rgba(255, 255, 255, 0.8);
}

.hero-title {
  margin: 0 0 1rem 0;
  font-size: 2.8rem; 
  font-weight: 700; 
  line-height: 1.2;
  letter-spacing: 0.02em;
}

.hero-title a {
  color: #fff;
  text-decoration: none;
  transition: color 0.2s;
}

.hero-title a:hover {
  color: rgba(255, 255, 255, 0.85);
}

.hero-summary {
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 1.5rem;
  opacity: 0.9;
  color: rgba(255, 255, 255, 0.9);
}

.hero-read-more {
  display: inline-block;
  background-color: #fff;
  color: #0a0a0a;
  padding: 0.75rem 1.5rem;
  border-radius: 25px;
  text-decoration: none;
  font-weight: 600;
  transition: background-color 0.2s, color 0.2s;
}

.hero-read-more:hover {
  background-color: #ccc;
  color: #000;
}

@media (max-width: 768px) {
  .hero-post-section {
    height: 60vh;
    min-height: 400px;
  }
  .hero-content {
    padding: 1.5rem 2rem;
    margin-bottom: 1.5rem;
  }
  .hero-title {
    font-size: 2.2rem;
  }
  .hero-summary {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .hero-post-section {
    height: 55vh;
    min-height: 350px;
  }
  .hero-content {
    padding: 1rem 1.5rem;
    margin-bottom: 1rem;
  }
  .hero-title {
    font-size: 1.8rem;
  }
  .hero-summary {
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }
  .hero-read-more {
    padding: 0.6rem 1.2rem;
    font-size: 0.9rem;
  }
}
</style>
