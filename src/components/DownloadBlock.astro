---
interface Props {
  downloadUrl: string;
  title?: string;
  description?: string;
  fileSize?: string;
  requiresMembership?: boolean;
  require_tier?: 'Free' | 'Starter' | 'Explorer' | 'Creator';
}

const {
  downloadUrl,
  title = "下載檔案",
  description,
  fileSize,
  requiresMembership = false,
  require_tier = 'Free'
} = Astro.props;

// 標準化為字串格式
const normalizedRequireTier = require_tier;

const getFileInfo = (url: string) => {
  const fileName = url.split('/').pop() || 'unknown';
  const fileExtension = fileName.split('.').pop()?.toLowerCase() || '';
  const formatInfo = {
    'wav': { format: 'WAV', color: '#ff6b35' },
    'mp3': { format: 'MP3', color: '#4CAF50' },
    'flac': { format: 'FLAC', color: '#2196F3' },
    'aiff': { format: 'AIFF', color: '#9C27B0' },
    'ogg': { format: 'OGG', color: '#FF9800' },
    'm4a': { format: 'M4A', color: '#795548' },
    'aac': { format: 'AAC', color: '#607D8B' },
    'zip': { format: 'ZIP', color: '#607D8B' },
    'rar': { format: 'RAR', color: '#795548' },
    '7z': { format: '7Z', color: '#9C27B0' }
  };
  const info = formatInfo[fileExtension as keyof typeof formatInfo] || {
    format: fileExtension.toUpperCase(),
    color: '#666'
  };
  return {
    fileName,
    fileFormat: info.format,
    formatColor: info.color,
    fileSize: fileSize || '檔案大小未知'
  };
};

const fileInfo = getFileInfo(downloadUrl);
---

<div class="download-block-flex" data-download-url={downloadUrl} data-requires-membership={requiresMembership} data-require-tier={normalizedRequireTier}>
  <div class="membership-label">{normalizedRequireTier}</div>
  <div class="download-flex-row">
    <div class="file-info-flex">
      <div class="file-title">{title}</div>
      {description && <div class="file-description">{description}</div>}
      <div class="file-badges">
        <span class="badge format-badge" style={`background:${fileInfo.formatColor}`}>{fileInfo.fileFormat}</span>
        <span class="badge size-badge" data-file-size>{fileInfo.fileSize}</span>
        <span class="badge name-badge">{fileInfo.fileName}</span>
      </div>
    </div>
    <div class="file-action-flex">
      <button class="download-btn-flex" data-download-action disabled>下載</button>
    </div>
  </div>
</div>

<script type="module">
  // 等待全局的 membershipAuth 載入
  function waitForMembershipAuth() {
    return new Promise((resolve) => {
      if (window.membershipAuth) {
        resolve(window.membershipAuth);
      } else {
        const checkAuth = () => {
          if (window.membershipAuth) {
            resolve(window.membershipAuth);
          } else {
            setTimeout(checkAuth, 100);
          }
        };
        checkAuth();
      }
    });
  }

  async function fetchFileSize(url) {
    try {
      const response = await fetch(url, { method: 'HEAD' });
      const contentLength = response.headers.get('Content-Length');
      if (contentLength) {
        const bytes = parseInt(contentLength);
        return formatFileSize(bytes);
      }
    } catch {}
    return '';
  }
  
  function formatFileSize(bytes) {
    if (!bytes) return '檔案大小未知';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
  }

  function getAuthToken() {
    return localStorage.getItem('auth_token');
  }
  
  async function checkUserTier() {
    const auth = await waitForMembershipAuth();
    return auth.isAuthenticated() ? auth.getUserInfo()?.tier : null;
  }
  
  function compareTiers(userTier, requiredTier) {
    const tierLevels = {
      'Free': 0,
      'Starter': 1,
      'Explorer': 2,
      'Creator': 3
    };
    return tierLevels[userTier] >= tierLevels[requiredTier];
  }
  
  async function verifyDownloadPermission(fileUrl) {
    const auth = await waitForMembershipAuth();
    if (!auth.isAuthenticated()) {
      return { allowed: false, message: '請先登入' };
    }
    
    try {
      const fileName = fileUrl.split('/').pop();
      console.log('向後端驗證檔案權限:', fileName);
      const result = await auth.checkDownloadAccess(fileName);
      console.log('後端回應:', result);
      
      if (result.access) {
        return { allowed: true };
      } else {
        let message = '後端驗證失敗';
        if (result.error === 'file_not_found') {
          message = '檔案不存在於系統中，請聯繫管理員';
        } else if (result.currentTier && result.requiredTier) {
          message = `需要 ${result.requiredTier} 等級，您目前是 ${result.currentTier}`;
        } else {
          message = result.error || '權限驗證失敗';
        }
        return { allowed: false, message };
      }
    } catch (error) {
      console.error('Download permission check failed:', error);
      return { allowed: false, message: '權限驗證失敗，請稍後再試' };
    }
  }
  document.addEventListener('DOMContentLoaded', async () => {
    console.log('DownloadBlock script loaded');
    const blocks = document.querySelectorAll('.download-block-flex');
    console.log('Found blocks:', blocks.length);
    
    blocks.forEach(async (block, index) => {
      console.log(`Processing block ${index + 1}`);
      const btn = block.querySelector('.download-btn-flex');
      const requiresMembership = block.getAttribute('data-requires-membership') === 'true';
      const requireTier = block.getAttribute('data-require-tier');
      const downloadUrl = block.getAttribute('data-download-url');
      const fileSizeElement = block.querySelector('[data-file-size]');
      
      console.log(`Block ${index + 1} - requireTier:`, requireTier, 'requiresMembership:', requiresMembership);
      
      // 使用字串等級
      const normalizedRequireTier = requireTier;
      
      // 檔案大小自動補全
      if (fileSizeElement && fileSizeElement.textContent === '檔案大小未知') {
        const realSize = await fetchFileSize(downloadUrl);
        if (realSize) fileSizeElement.textContent = realSize;
      }

      // 根據會員等級設定背景色彩
      const tierClasses = {
        'Free': 'tier-free',
        'Starter': 'tier-starter',
        'Explorer': 'tier-explorer',
        'Creator': 'tier-creator'
      };
      
      const tierClass = tierClasses[normalizedRequireTier];
      if (tierClass) {
        block.classList.add(tierClass);
      }      // 檢查用戶權限
      const userTier = await checkUserTier();
      console.log(`Block ${index + 1} - userTier:`, userTier);

      // 免費檔案處理 - 按鈕始終可點擊
      if (normalizedRequireTier === 'Free') {
        console.log(`Block ${index + 1} - 這是免費檔案，啟用按鈕`);
        btn.disabled = false;
        btn.classList.add('can-download');
        btn.title = userTier ? '' : '點擊下載（需要登入）';
      } else {
        // 付費檔案處理
        if (requiresMembership) {
          if (!userTier) {
            btn.disabled = true;
            btn.classList.remove('can-download');
            btn.title = '請先登入會員';
          } else {
            if (compareTiers(userTier, normalizedRequireTier)) {
              btn.disabled = false;
              btn.classList.add('can-download');
              btn.title = '';
            } else {
              btn.disabled = true;
              btn.classList.remove('can-download');
              btn.title = `需要等級：${normalizedRequireTier}，您目前：${userTier}`;
            }
          }
        } else {
          if (userTier) {
            btn.disabled = false;
            btn.classList.add('can-download');
            btn.title = '';
          } else {
            btn.disabled = true;
            btn.classList.remove('can-download');
            btn.title = '請先登入會員';
          }
        }
      }

      // 點擊事件處理
      if (btn._downloadClickHandler) {
        btn.removeEventListener('click', btn._downloadClickHandler);
      }
      
      const handleDownloadClick = async (e) => {
        e.stopImmediatePropagation();
        
        // 免費檔案特殊處理
        if (normalizedRequireTier === 'Free') {
          if (!userTier) {
            if (window.notify) {
              window.notify.warning('請先登入會員後再下載檔案', {
                title: '需要登入',
                duration: 4000
              });
            } else {
              alert('請先登入會員後再下載檔案');
            }
            return;
          }
          console.log('免費檔案，已登入用戶直接下載');
          window.open(downloadUrl, '_blank');
          return;        }
        
        // 付費檔案權限檢查 - 只有按鈕啟用時才繼續
        if (btn.disabled) return;
        
        console.log('正在進行後端權限驗證...');
        const finalCheck = await verifyDownloadPermission(downloadUrl);
        if (finalCheck.allowed) {
          window.open(downloadUrl, '_blank');
        } else {
          if (window.notify) {
            window.notify.error(finalCheck.message || '下載權限驗證失敗', {
              title: '下載失敗',
              duration: 5000
            });
          } else {
            alert(finalCheck.message || '下載權限驗證失敗');
          }
        }
      };
      
      btn.addEventListener('click', handleDownloadClick);
      btn._downloadClickHandler = handleDownloadClick;
    });
  });
</script>

