---
import Layout from '../layouts/Layout.astro';

// 生成 URL 友好的 slug
function generateSlug(title: string): string {
  return title
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)/g, '');
}

// 文章接口
interface Post {
  title: string;
  date: string;
  tag: string;
  summary: string;
  link: string;
  image?: string;
}

// 所有文章数据
const allPosts: Post[] = [
  {
    title: 'Unleash Your Creative Potential',
    date: '2025-03-31',
    tag: 'Creative',
    summary: 'Nec sed pharetra scelerisque blandit. Vitae commodo integer nibh etiam. Iaculis nunc dui interdum donec sodales.',
    link: `/blog/${generateSlug('Unleash Your Creative Potential')}`,
    image: 'https://images.unsplash.com/photo-1499750310107-5fef28a66643?w=400&h=250&fit=crop'
  },
  {
    title: 'Exploring the Creative Boundaries',
    date: '2025-03-29',
    tag: 'Creative',
    summary: 'Lectus suspendisse eleifend nunc vulputate aliquam sit. Venenatis ac mattis vel ultricies platea mauris.',
    link: `/blog/${generateSlug('Exploring the Creative Boundaries')}`,
    image: 'https://images.unsplash.com/photo-1501504905252-473c47e087f8?w=400&h=250&fit=crop'
  },
  {
    title: 'Maximizing Work Productivity',
    date: '2025-03-27',
    tag: 'Business',
    summary: 'Tincidunt sit id maecenas vitae felis. Volutpat porta lectus malesuada ornare suspendisse eu vestibulum massa.',
    link: `/blog/${generateSlug('Maximizing Work Productivity')}`,
    image: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?w=1600&h=800&fit=crop'
  },
  {
    title: 'Power of Artificial Intelligence',
    date: '2025-03-24',
    tag: 'Business',
    summary: 'Lectus suspendisse eleifend nunc vulputate aliquam sit. Venenatis ac mattis vel ultricies platea mauris.',
    link: `/blog/${generateSlug('Power of Artificial Intelligence')}`,
    image: 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=400&h=250&fit=crop'
  },
  {
    title: 'The Ultimate Adventure Guide',
    date: '2025-03-26',
    tag: 'Lifestyle',
    summary: 'Phasellus sollicitudin ut pellentesque vitae eleifend diam rutrum elementum libero.',
    link: `/blog/${generateSlug('The Ultimate Adventure Guide')}`,
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=250&fit=crop'
  },
  {
    title: 'Unlocking Creativity of Design',
    date: '2025-03-28',
    tag: 'Design',
    summary: 'Mi eu mauris vitae euismod ligula sed. Amet sed pellentesque vulputate sed.',
    link: `/blog/${generateSlug('Unlocking Creativity of Design')}`,
    image: 'https://images.unsplash.com/photo-1516321318423-f06f85e504b3?w=400&h=250&fit=crop'
  },
  {
    title: 'Uncovering Hidden & Special Places',
    date: '2025-03-30',
    tag: 'Travel',
    summary: 'Tristique hendrerit massa adipiscing tincidunt sed. Ultrices vitae vel maecenas tincidunt semper neque.',
    link: `/blog/${generateSlug('Uncovering Hidden & Special Places')}`,
    image: 'https://images.unsplash.com/photo-1522199755839-a2bacb67c546?w=400&h=250&fit=crop'
  },
  {
    title: 'Traveling on a Budget',
    date: '2025-03-10',
    tag: 'Travel',
    summary: 'Pretium urna viverra ipsum diam lacus nunc a lobortis. Quis lectus nisi tristique mi sit purus sed nunc.',
    link: `/blog/${generateSlug('Traveling on a Budget')}`,
    image: 'https://images.unsplash.com/photo-1486312338219-ce68e2c6b7a4?w=400&h=250&fit=crop'
  }
];

// 按标签分组文章
const postsByTag = allPosts.reduce((acc, post) => {
  if (!acc[post.tag]) {
    acc[post.tag] = [];
  }
  acc[post.tag].push(post);
  return acc;
}, {} as Record<string, Post[]>);

// 标签颜色映射
const tagColors: Record<string, string> = {
  'Business': '#3b82f6',
  'Creative': '#8b5cf6',
  'Design': '#06b6d4',
  'Lifestyle': '#10b981',
  'Travel': '#f59e0b',
  'Fashion': '#ec4899',
  'Fitness': '#ef4444',
  'Health': '#84cc16'
};

// 排序标签（按文章数量降序）
const sortedTags = Object.keys(postsByTag).sort((a, b) => postsByTag[b].length - postsByTag[a].length);
---

<Layout>
  <!-- 导航栏 -->
  <nav class="navbar">
    <div class="nav-container">
      <a href="/" class="logo-link">
        <h1 class="logo">Elysian</h1>
      </a>
      <div class="nav-links">
        <a href="/archive">Archive</a>
        <a href="/tags" class="active">Tags</a>
        <a href="/authors">Authors</a>
        <a href="/about">About</a>
      </div>
    </div>
  </nav>

  <main class="main-content tags-page">
    <!-- Page Header -->
    <section class="page-header">
      <div class="header-content">
        <h1 class="page-title">Tags</h1>
        <p class="page-subtitle">Explore articles by categories and discover content that interests you most</p>
        <div class="tags-stats">
          <span class="stat-item">{sortedTags.length} Categories</span>
          <span class="stat-divider">•</span>
          <span class="stat-item">{allPosts.length} Total Articles</span>
        </div>
      </div>
    </section>

    <!-- Tags Overview -->
    <section class="tags-overview-section">
      <div class="tags-overview-container">
        <h2 class="section-title">Browse by Category</h2>
        <div class="tags-cloud">
          {sortedTags.map(tag => (
            <a href={`#${tag.toLowerCase()}`} class="tag-cloud-item" style={`background-color: ${tagColors[tag] || '#666'}`}>
              <span class="tag-name">{tag}</span>
              <span class="tag-count">{postsByTag[tag].length}</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Tag Sections -->
    <section class="tag-sections">
      <div class="tag-sections-container">
        {sortedTags.map(tag => (
          <div class="tag-section" id={tag.toLowerCase()}>
            <div class="tag-header">
              <h2 class="tag-title" style={`color: ${tagColors[tag] || '#666'}`}>
                {tag}
                <span class="tag-article-count">({postsByTag[tag].length} article{postsByTag[tag].length !== 1 ? 's' : ''})</span>
              </h2>
              <p class="tag-description">
                {tag === 'Business' && 'Insights and strategies for professional growth and productivity.'}
                {tag === 'Creative' && 'Unleashing creativity and exploring artistic boundaries.'}
                {tag === 'Design' && 'Design principles, trends, and creative inspiration.'}
                {tag === 'Lifestyle' && 'Tips and ideas for living your best life.'}
                {tag === 'Travel' && 'Adventures, guides, and travel inspiration from around the world.'}
                {tag === 'Fashion' && 'Style trends, fashion tips, and wardrobe inspiration.'}
                {tag === 'Fitness' && 'Health, wellness, and fitness guidance for an active lifestyle.'}
                {tag === 'Health' && 'Wellness tips and health insights for better living.'}
              </p>
            </div>
            
            <div class="tag-articles-grid">
              {postsByTag[tag].map(post => (
                <article class="tag-article-card">
                  <div class="article-image">
                    <a href={post.link}>
                      <img src={post.image || 'https://via.placeholder.com/400x250/1a1a1a/333333?text=Fallback'} alt={post.title} loading="lazy" />
                    </a>
                  </div>
                  <div class="article-content">
                    <div class="article-meta">
                      <span class="article-date">{new Date(post.date).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                      })}</span>
                    </div>
                    <h3 class="article-title">
                      <a href={post.link}>{post.title}</a>
                    </h3>
                    <p class="article-summary">{post.summary}</p>
                    <a href={post.link} class="read-more-link">Read More →</a>
                  </div>
                </article>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-content">
        <div class="footer-brand">
          <h3>Elysian</h3>
          <p>Exploring the intersection of technology, creativity, and human experience.</p>
        </div>
        <div class="footer-links">
          <div class="link-group">
            <h4>Content</h4>
            <a href="/archive">Archive</a>
            <a href="/tags">Tags</a>
            <a href="/authors">Authors</a>
          </div>
          <div class="link-group">
            <h4>Company</h4>
            <a href="/about">About</a>
            <a href="#" class="footer-link">Privacy</a>
            <a href="#" class="footer-link">Terms</a>
          </div>
          <div class="link-group">
            <h4>Connect</h4>
            <a href="#" class="footer-link">Twitter</a>
            <a href="#" class="footer-link">LinkedIn</a>
            <a href="#" class="footer-link">RSS</a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; 2025 Elysian. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* Navigation Styles */
  .navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: rgba(26, 26, 26, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #333;
    z-index: 1000;
    padding: 1rem 0;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
  }

  .logo-link {
    text-decoration: none;
  }

  .logo {
    color: #fff;
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: #e0e0e0;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: #3b82f6;
  }

  .nav-links a.active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #3b82f6;
  }

  /* Main Content */
  .main-content {
    margin-top: 80px;
    color: #e0e0e0;
  }

  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    padding: 4rem 2rem 3rem;
    text-align: center;
    border-bottom: 1px solid #333;
  }

  .header-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: #b0b0b0;
    margin-bottom: 2rem;
  }

  .tags-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    color: #888;
  }

  .stat-item {
    font-weight: 500;
  }

  .stat-divider {
    opacity: 0.5;
  }

  /* Tags Overview */
  .tags-overview-section {
    background-color: #0d0d0d;
    padding: 3rem 2rem;
    border-bottom: 1px solid #333;
  }

  .tags-overview-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    color: #fff;
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .tag-cloud-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    color: white;
    font-weight: 500;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-width: 120px;
    justify-content: center;
  }

  .tag-cloud-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .tag-name {
    font-size: 1rem;
  }

  .tag-count {
    background-color: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  /* Tag Sections */
  .tag-sections {
    background-color: #0d0d0d;
    padding: 0 2rem 3rem;
  }

  .tag-sections-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .tag-section {
    margin-bottom: 4rem;
    scroll-margin-top: 100px;
  }

  .tag-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .tag-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .tag-article-count {
    font-size: 1.2rem;
    font-weight: 400;
    color: #888;
  }

  .tag-description {
    color: #b0b0b0;
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .tag-articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .tag-article-card {
    background-color: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #333;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .tag-article-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .article-image {
    height: 180px;
    overflow: hidden;
  }

  .article-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .tag-article-card:hover .article-image img {
    transform: scale(1.05);
  }

  .article-content {
    padding: 1.5rem;
  }

  .article-meta {
    margin-bottom: 1rem;
  }

  .article-date {
    color: #888;
    font-size: 0.9rem;
  }

  .article-title {
    margin-bottom: 1rem;
  }

  .article-title a {
    color: #fff;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 600;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .article-title a:hover {
    color: #3b82f6;
  }

  .article-summary {
    color: #b0b0b0;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .read-more-link {
    color: #3b82f6;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .read-more-link:hover {
    color: #2563eb;
  }

  /* Footer */
  .footer {
    background-color: #0d0d0d;
    border-top: 1px solid #333;
    padding: 3rem 2rem 1rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-brand h3 {
    color: #fff;
    margin-bottom: 1rem;
  }

  .footer-brand p {
    color: #b0b0b0;
    line-height: 1.6;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .link-group h4 {
    color: #fff;
    margin-bottom: 1rem;
  }

  .link-group a {
    display: block;
    color: #b0b0b0;
    text-decoration: none;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
  }

  .link-group a:hover {
    color: #3b82f6;
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 2rem;
    text-align: center;
  }

  .footer-bottom p {
    color: #666;
    margin: 0;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2.5rem;
    }

    .tags-cloud {
      justify-content: center;
    }

    .tag-cloud-item {
      min-width: 100px;
    }

    .tag-title {
      font-size: 2rem;
    }

    .tag-articles-grid {
      grid-template-columns: 1fr;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-container {
      padding: 0 1rem;
    }
  }
</style>

<script>
  // Smooth scrolling for tag links
  document.addEventListener('DOMContentLoaded', function() {
    const tagLinks = document.querySelectorAll('.tag-cloud-item');
    
    tagLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const targetElement = document.getElementById(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>
