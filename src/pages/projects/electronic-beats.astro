---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Electronic Beats Pack - X-Sound Studio">
  <!-- Audio Player Hero Section -->
  <section class="audio-hero">
    <div class="container">
      <div class="audio-player-section">
        <div class="project-info">
          <div class="project-meta">
            <span class="category">音效包展示下载</span>
            <span class="year">2024</span>
          </div>
          <h1 class="project-title">Electronic Beats Pack</h1>
          <p class="project-description">
            精心制作的电子音乐音效包，包含鼓点、合成器、低音、氛围音效等。支持WAV和AIFF格式，可商用授权。
          </p>
        </div>
        
        <!-- Audio Player -->
        <div class="audio-player">
          <div class="player-container">
            <div class="album-art">
              <img src="https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?w=600&h=600&fit=crop&crop=center" alt="Electronic Beats Pack Cover" />
              <div class="play-button">
                <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                  <path d="M8 5v14l11-7z" fill="currentColor"/>
                </svg>
              </div>
            </div>
            
            <div class="player-controls">
              <div class="track-info">
                <h3 class="track-title">电子音效合集预览</h3>
                <p class="track-artist">X-Sound Studio</p>
              </div>
              
              <div class="progress-bar">
                <div class="progress-fill"></div>
                <div class="progress-thumb"></div>
              </div>
              
              <div class="time-display">
                <span class="current-time">0:00</span>
                <span class="total-time">2:30</span>
              </div>
              
              <div class="control-buttons">
                <button class="control-btn prev">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M19 20L9 12L19 4V20Z" fill="currentColor"/>
                    <path d="M5 19V5" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </button>
                <button class="control-btn play-pause">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
                    <path d="M8 5v14l11-7z" fill="currentColor"/>
                  </svg>
                </button>
                <button class="control-btn next">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                    <path d="M5 4L15 12L5 20V4Z" fill="currentColor"/>
                    <path d="M19 5V19" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Technical Specifications -->
  <section class="specifications">
    <div class="container">
      <h2 class="spec-title">音效包规格</h2>
      <div class="spec-grid">
        <div class="spec-group">
          <h3>文件格式</h3>
          <div class="spec-items">
            <div class="spec-item">
              <span class="spec-label">主要格式</span>
              <span class="spec-value">WAV, AIFF</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">采样率</span>
              <span class="spec-value">44.1kHz / 48kHz</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">位深度</span>
              <span class="spec-value">24-bit</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">BPM范围</span>
              <span class="spec-value">120-140 BPM</span>
            </div>
          </div>
        </div>
        
        <div class="spec-group">
          <h3>制作工具</h3>
          <div class="spec-items">
            <div class="spec-item">
              <span class="spec-label">DAW软件</span>
              <span class="spec-value">Ableton Live, Logic Pro</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">合成器</span>
              <span class="spec-value">Serum, Massive X</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">鼓机</span>
              <span class="spec-value">Native Instruments Battery</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">效果处理</span>
              <span class="spec-value">iZotope Ozone, FabFilter</span>
            </div>
          </div>
        </div>
        
        <div class="spec-group">
          <h3>包装内容</h3>
          <div class="spec-items">
            <div class="spec-item">
              <span class="spec-label">音效数量</span>
              <span class="spec-value">200+ 个样本</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">分类</span>
              <span class="spec-value">鼓点、低音、合成器、氛围</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">使用许可</span>
              <span class="spec-value">免版税商用授权</span>
            </div>
            <div class="spec-item">
              <span class="spec-label">文件大小</span>
              <span class="spec-value">1.2 GB (解压后)</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sample Categories -->
  <section class="categories-section">
    <div class="container">
      <h2 class="categories-title">音效分类</h2>
      <div class="categories-grid">
        <div class="category-card">
          <div class="category-icon">🥁</div>
          <h3>鼓点样本</h3>
          <div class="category-stats">
            <span>50个样本</span>
            <span>120-140 BPM</span>
          </div>
          <p>Kick、Snare、Hi-hat、Percussion等各类鼓点样本</p>
          <button class="preview-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
            试听
          </button>
        </div>
        
        <div class="category-card">
          <div class="category-icon">🎸</div>
          <h3>低音音效</h3>
          <div class="category-stats">
            <span>40个样本</span>
            <span>Sub Bass</span>
          </div>
          <p>深沉有力的低音样本，为音乐增加厚度和冲击力</p>
          <button class="preview-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
            试听
          </button>
        </div>
        
        <div class="category-card">
          <div class="category-icon">🎹</div>
          <h3>合成器</h3>
          <div class="category-stats">
            <span>60个样本</span>
            <span>Lead & Pad</span>
          </div>
          <p>丰富的合成器音色，包含Lead、Pad、Arp等类型</p>
          <button class="preview-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
            试听
          </button>
        </div>
        
        <div class="category-card">
          <div class="category-icon">🌊</div>
          <h3>氛围音效</h3>
          <div class="category-stats">
            <span>50个样本</span>
            <span>Ambient</span>
          </div>
          <p>营造氛围的背景音效，适合intro、breakdown等段落</p>
          <button class="preview-btn">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
            试听
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Sample Library -->
  <section class="sample-library">
    <div class="container">
      <h2 class="library-title">样本预览</h2>
      <div class="library-tabs">
        <button class="tab-btn active" data-tab="drums">鼓点</button>
        <button class="tab-btn" data-tab="bass">低音</button>
        <button class="tab-btn" data-tab="synth">合成器</button>
        <button class="tab-btn" data-tab="fx">音效</button>
      </div>
      
      <div class="samples-grid" id="drums-samples">
        <div class="sample-item">
          <div class="sample-info">
            <h4>Kick_001_128BPM</h4>
            <span class="sample-meta">Kick Drum • 128 BPM • C</span>
          </div>
          <div class="sample-waveform">
            <div class="waveform-bars">
              <div class="bar" style="height: 60%"></div>
              <div class="bar" style="height: 80%"></div>
              <div class="bar" style="height: 40%"></div>
              <div class="bar" style="height: 90%"></div>
              <div class="bar" style="height: 70%"></div>
              <div class="bar" style="height: 30%"></div>
              <div class="bar" style="height: 85%"></div>
              <div class="bar" style="height: 65%"></div>
            </div>
          </div>
          <button class="sample-play">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
          </button>
        </div>
        
        <div class="sample-item">
          <div class="sample-info">
            <h4>Snare_Heavy_130BPM</h4>
            <span class="sample-meta">Snare • 130 BPM • D</span>
          </div>
          <div class="sample-waveform">
            <div class="waveform-bars">
              <div class="bar" style="height: 30%"></div>
              <div class="bar" style="height: 95%"></div>
              <div class="bar" style="height: 85%"></div>
              <div class="bar" style="height: 40%"></div>
              <div class="bar" style="height: 60%"></div>
              <div class="bar" style="height: 20%"></div>
              <div class="bar" style="height: 75%"></div>
              <div class="bar" style="height: 45%"></div>
            </div>
          </div>
          <button class="sample-play">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
          </button>
        </div>
        
        <div class="sample-item">
          <div class="sample-info">
            <h4>HiHat_Closed_140BPM</h4>
            <span class="sample-meta">Hi-Hat • 140 BPM • F#</span>
          </div>
          <div class="sample-waveform">
            <div class="waveform-bars">
              <div class="bar" style="height: 45%"></div>
              <div class="bar" style="height: 25%"></div>
              <div class="bar" style="height: 55%"></div>
              <div class="bar" style="height: 35%"></div>
              <div class="bar" style="height: 40%"></div>
              <div class="bar" style="height: 50%"></div>
              <div class="bar" style="height: 30%"></div>
              <div class="bar" style="height: 45%"></div>
            </div>
          </div>
          <button class="sample-play">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M8 5v14l11-7z" fill="currentColor"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Download Section -->
  <section class="download-section">
    <div class="container">
      <div class="download-card">
        <h2>立即获取完整音效包</h2>
        <p>200+ 高品质电子音乐样本，免版税商用授权</p>
        <div class="price-info">
          <span class="original-price">¥899</span>
          <span class="current-price">¥599</span>
          <span class="discount">限时优惠 33% OFF</span>
        </div>
        <div class="download-actions">
          <button class="download-btn primary">立即购买下载</button>
          <button class="contact-btn secondary">批量采购咨询</button>
        </div>
        <div class="payment-methods">
          <span>支持支付方式：</span>
          <div class="payment-icons">
            <span>💳</span>
            <span>💰</span>
            <span>📱</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation -->
  <section class="project-navigation">
    <div class="container">
      <div class="nav-links">
        <a href="/projects/urban-rain-asmr" class="nav-link prev">
          <span class="nav-label">上一个项目</span>
          <span class="nav-title">Urban Rain ASMR</span>
        </a>
        <a href="/" class="nav-link home">
          <span class="nav-icon">⌂</span>
          <span class="nav-title">返回首页</span>
        </a>
        <a href="/projects/game-audio-arsenal" class="nav-link next">
          <span class="nav-label">下一个项目</span>
          <span class="nav-title">Game Audio Arsenal</span>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Audio Hero Section */
  .audio-hero {
    background: linear-gradient(135deg, #0a0a0a 0%, #1e1e3f 100%);
    color: white;
    padding: 8rem 0 4rem;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .audio-player-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .project-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .category {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
  }

  .year {
    color: #888;
  }

  .project-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .project-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: #b0b0b0;
    max-width: 500px;
  }

  /* Audio Player */
  .audio-player {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 2rem;
    backdrop-filter: blur(20px);
  }

  .player-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .album-art {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    border-radius: 1rem;
    overflow: hidden;
    cursor: pointer;
  }

  .album-art img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s ease;
    opacity: 0.9;
  }

  .play-button:hover {
    background: rgba(0, 0, 0, 0.8);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .track-info {
    text-align: center;
  }

  .track-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .track-artist {
    color: #888;
    font-size: 0.95rem;
  }

  .progress-bar {
    position: relative;
    height: 6px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 3px;
    cursor: pointer;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #f59e0b, #d97706);
    border-radius: 3px;
    width: 25%;
    position: relative;
  }

  .progress-thumb {
    position: absolute;
    right: -6px;
    top: 50%;
    transform: translateY(-50%);
    width: 12px;
    height: 12px;
    background: white;
    border-radius: 50%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .time-display {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: #888;
  }

  .control-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
  }

  .control-btn {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .control-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .control-btn.play-pause {
    background: linear-gradient(135deg, #f59e0b, #d97706);
    width: 60px;
    height: 60px;
  }

  /* Specifications */
  .specifications {
    background: #111111;
    color: white;
    padding: 6rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .spec-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
  }

  .spec-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .spec-group {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    backdrop-filter: blur(10px);
  }

  .spec-group h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: #f59e0b;
  }

  .spec-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .spec-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .spec-item:last-child {
    border-bottom: none;
  }

  .spec-label {
    font-weight: 500;
    color: #b0b0b0;
  }

  .spec-value {
    font-weight: 600;
    color: white;
  }

  /* Categories Section */
  .categories-section {
    background: #0a0a0a;
    color: white;
    padding: 6rem 0;
  }

  .categories-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-5px);
  }

  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .category-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #f59e0b;
  }

  .category-stats {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: #888;
  }

  .category-card p {
    color: #b0b0b0;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .preview-btn {
    background: none;
    border: 2px solid #f59e0b;
    color: #f59e0b;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    cursor: pointer;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 auto;
    transition: all 0.3s ease;
  }

  .preview-btn:hover {
    background: #f59e0b;
    color: white;
  }

  /* Sample Library */
  .sample-library {
    background: #111111;
    color: white;
    padding: 6rem 0;
  }

  .library-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
  }

  .library-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .tab-btn {
    background: none;
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #888;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .tab-btn.active,
  .tab-btn:hover {
    border-color: #f59e0b;
    color: #f59e0b;
  }

  .samples-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1rem;
  }

  .sample-item {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all 0.3s ease;
  }

  .sample-item:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-2px);
  }

  .sample-info {
    flex: 1;
  }

  .sample-info h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .sample-meta {
    font-size: 0.875rem;
    color: #888;
  }

  .sample-waveform {
    flex: 2;
    height: 40px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
    overflow: hidden;
    display: flex;
    align-items: end;
    padding: 4px;
  }

  .waveform-bars {
    display: flex;
    align-items: end;
    gap: 2px;
    height: 100%;
    width: 100%;
  }

  .bar {
    background: linear-gradient(to top, #f59e0b, #fbbf24);
    width: 100%;
    min-height: 2px;
  }

  .sample-play {
    background: none;
    border: 2px solid #f59e0b;
    color: #f59e0b;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sample-play:hover {
    background: #f59e0b;
    color: white;
  }

  /* Download Section */
  .download-section {
    background: #0a0a0a;
    color: white;
    padding: 6rem 0;
  }

  .download-card {
    max-width: 600px;
    margin: 0 auto;
