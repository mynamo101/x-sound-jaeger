<script>
  // Audio player and tabs functionality
  document.addEventListener('DOMContentLoaded', () => {
    const playButtons = document.querySelectorAll('.play-button, .control-btn.play-pause, .sample-play, .preview-btn');
    let isPlaying = false;
    
    playButtons.forEach(button => {
      button.addEventListener('click', () => {
        isPlaying = !isPlaying;
        
        // Update play button icons
        const playIcons = document.querySelectorAll('.play-button svg, .control-btn.play-pause svg');
        playIcons.forEach(icon => {
          if (isPlaying) {
            icon.innerHTML = '<path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z" fill="currentColor"/>';
          } else {
            icon.innerHTML = '<path d="M8 5v14l11-7z" fill="currentColor"/>';
          }
        });
        
        // Simulate progress
        if (isPlaying) {
          const progressFill = document.querySelector('.progress-fill');
          let progress = 25;
          const interval = setInterval(() => {
            if (!isPlaying || progress >= 100) {
              clearInterval(interval);
              if (progress >= 100) {
                progress = 0;
                isPlaying = false;
                playIcons.forEach(icon => {
                  icon.innerHTML = '<path d="M8 5v14l11-7z" fill="currentColor"/>';
                });
              }
            } else {
              progress += 1;
              progressFill.style.width = progress + '%';
            }
          }, 50);
        }
      });
    });

    // Tab functionality
    const tabButtons = document.querySelectorAll('.tab-btn');
    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all tabs
        tabButtons.forEach(tab => tab.classList.remove('active'));
        // Add active class to clicked tab
        button.classList.add('active');
        
        // You can add logic here to show different sample categories
      });
    });
  });
</script>
