---
import Layout from '../layouts/Layout.astro';
import ProjectCarousel from '../components/ProjectCarousel.astro';

// 工作室專案數據
interface Project {
  id: number;
  title: string;
  category: string;
  description: string;
  image: string;
  technologies: string[];
  link?: string;
  year: string;
}

// 精選專案展示
const featuredProjects: Project[] = [
  {
    id: 1,
    title: "Cinema Soundscapes",
    category: "视频音效展示",
    description: "专业电影级音效设计作品集，包含环境音、动作音效、情感配乐等多种类型。为影视制作提供沉浸式听觉体验。",
    image: "https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?w=1600&h=900&fit=crop&crop=center",
    technologies: ["Pro Tools", "Logic Pro", "Kontakt", "Waves", "FabFilter"],
    link: "/projects/cinema-soundscapes",
    year: "2024"
  },
  {
    id: 2,
    title: "Urban Rain ASMR",
    category: "ASMR类型",
    description: "高品质ASMR音频作品，包含雨声、自然白噪音、放松冥想音效等。采用双耳录音技术，带来极致的沉浸感受。",
    image: "https://images.unsplash.com/photo-1519904981063-b0cf448d479e?w=1600&h=900&fit=crop&crop=center",
    technologies: ["Binaural Mics", "Adobe Audition", "RX Audio", "Zoom H6", "Soundfield SPS200"],
    link: "/projects/urban-rain-asmr",
    year: "2024"
  },
  {
    id: 3,
    title: "Electronic Beats Pack",
    category: "音效包展示下载",
    description: "精心制作的电子音乐音效包，包含鼓点、合成器、低音、氛围音效等。支持WAV和AIFF格式，可商用授权。",
    image: "https://images.unsplash.com/photo-1493225457124-a3eb161ffa5f?w=1600&h=900&fit=crop&crop=center",
    technologies: ["Ableton Live", "Serum", "Massive X", "Native Instruments", "iZotope Ozone"],
    link: "/projects/electronic-beats",
    year: "2024"
  },
  {
    id: 4,
    title: "Forest Whispers Collection",
    category: "ASMR类型",
    description: "纯净自然森林环境ASMR录音合集，包含鸟鸣、风声、水流声等。使用专业野外录音设备，呈现最真实的自然之声。",
    image: "https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1600&h=900&fit=crop&crop=center",
    technologies: ["Field Recording", "Zoom F8n", "Sennheiser MKH416", "Audio-Technica BP4025", "iZotope RX"],
    link: "/projects/forest-whispers",
    year: "2024"
  },
  {
    id: 5,
    title: "Game Audio Arsenal",
    category: "音效包展示下载",
    description: "游戏音效资源包，涵盖战斗、UI、环境、角色动作等各类游戏音效。高质量WAV格式，适用于各种游戏引擎。",
    image: "https://images.unsplash.com/photo-1542751371-adc38448a05e?w=1600&h=900&fit=crop&crop=center",
    technologies: ["Wwise", "FMOD", "Unity Audio", "Unreal Engine", "Reaper"],
    link: "/projects/game-audio-arsenal",
    year: "2024"
  },
  {
    id: 6,
    title: "Sci-Fi Atmosphere Demo",
    category: "视频音效展示",
    description: "科幻主题音效展示作品，包含太空环境音、机械声效、未来科技音效等。为科幻影视和游戏项目提供专业音频解决方案。",
    image: "https://images.unsplash.com/photo-1446776653964-20c1d3a81b06?w=1600&h=900&fit=crop&crop=center",
    technologies: ["Kyma", "Max/MSP", "Reaktor", "Omnisphere", "Sound Particles"],
    link: "/projects/scifi-atmosphere",
    year: "2024"
  }
];

// 服務項目
const services = [
  {
    title: "视频音效设计",
    description: "专业电影、广告、短视频音效设计与制作服务",
    icon: "🎬"
  },
  {
    title: "ASMR音频制作", 
    description: "高品质ASMR内容录制、编辑与后期处理",
    icon: "🎧"
  },
  {
    title: "音效包定制",
    description: "游戏、应用、多媒体项目专用音效包制作",
    icon: "🔊"
  },
  {
    title: "环境音录制",
    description: "自然环境、城市场景等专业野外录音服务",
    icon: "🌿"
  }
];
---

<Layout>
  <!-- 工作室導航欄 -->
  <nav class="navbar">
    <div class="nav-container">
      <a href="/" class="logo-link">
        <h1 class="logo">X-Sound Studio</h1>
      </a>
      <div class="nav-links">
        <a href="#work">Work</a>
        <a href="#services">Services</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
      </div>
    </div>
  </nav>

  <main class="main-content">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">
          We craft immersive<br>
          <span class="highlight">sonic experiences</span>
        </h1>
        <p class="hero-description">
          专业音效设计工作室，专注于视频音效、ASMR制作和音效包开发。
          用声音讲述故事，为您的项目注入生命力。
        </p>
        <div class="hero-actions">
          <a href="#work" class="cta-button primary">探索作品</a>
          <a href="#contact" class="cta-button secondary">开始合作</a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="floating-elements">
          <div class="element element-1"></div>
          <div class="element element-2"></div>
          <div class="element element-3"></div>
        </div>
      </div>
    </section>

    <!-- Featured Projects Gallery -->
    <section id="work" class="projects-section">
      <div class="container">
        <div class="section-header">
          <div class="section-badge">作品集</div>
          <h2 class="section-title">精选音效作品</h2>
          <p class="section-subtitle">展示我们最新的音效设计项目和创新音频解决方案</p>
        </div>
        
        <!-- 分类过滤器 -->
        <div class="gallery-filters">
          <button class="filter-btn active" data-filter="all">全部作品</button>
          <button class="filter-btn" data-filter="视频音效展示">视频音效</button>
          <button class="filter-btn" data-filter="ASMR类型">ASMR音频</button>
          <button class="filter-btn" data-filter="音效包展示下载">音效包</button>
        </div>
        
        <!-- 瀑布流作品画廊 -->
        <div class="work-gallery">
          {featuredProjects.map((project, index) => (
            <div class="gallery-item" data-category={project.category}>
              <a href={project.link} class="gallery-link">
                <div class="gallery-image">
                  <img src={project.image} alt={project.title} loading="lazy" />
                  <div class="gallery-overlay">
                    <div class="overlay-content">
                      <span class="project-category">{project.category}</span>
                      <h3 class="project-title">{project.title}</h3>
                      <p class="project-desc">{project.description}</p>
                      <div class="project-tech">
                        {project.technologies.slice(0, 3).map(tech => (
                          <span class="tech-badge">{tech}</span>
                        ))}
                      </div>
                      <span class="view-more">查看详情 →</span>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services-section">
      <div class="container">
        <div class="section-header">
          <div class="section-badge">服务内容</div>
          <h2 class="section-title">我们的专业服务</h2>
          <p class="section-subtitle">为现代媒体项目提供全方位的音频解决方案</p>
        </div>
        <div class="services-grid">
          {services.map(service => (
            <div class="service-card">
              <div class="service-icon">{service.icon}</div>
              <h3 class="service-title">{service.title}</h3>
              <p class="service-description">{service.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about-section">
      <div class="container">
        <div class="about-content">
          <div class="about-text">
            <div class="section-badge">关于我们</div>
            <h2 class="section-title">X-Sound Studio</h2>
            <p class="about-description">
              成立于2022年，X-Sound Studio是一家专业的音效设计工作室，专注于为影视、游戏、
              ASMR内容和多媒体项目提供高品质的音频解决方案。我们的团队由经验丰富的音效设计师、
              录音师和后期制作专家组成，致力于通过声音创造沉浸式的听觉体验。
            </p>
            <div class="stats-grid">
              <div class="stat-item">
                <div class="stat-number">200+</div>
                <div class="stat-label">音效作品</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">80+</div>
                <div class="stat-label">满意客户</div>
              </div>
              <div class="stat-item">
                <div class="stat-number">2</div>
                <div class="stat-label">年经验</div>
              </div>
            </div>
          </div>
          <div class="about-image">
            <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=600&h=400&fit=crop" alt="Our Team" />
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA Section -->
    <section id="contact" class="contact-cta-section">
      <div class="container">
        <div class="cta-content">
          <h2 class="cta-title">准备好为您的项目添加专业音效了吗？</h2>
          <p class="cta-description">
            让我们携手合作，为您的作品打造震撼的听觉体验。
            联系我们，让我们讨论如何为您的创意项目提供完美的音频解决方案。
          </p>
          <div class="cta-actions">
            <a href="mailto:hello@xsoundstudio.com" class="cta-button primary large">立即联系</a>
            <div class="contact-info">
              <span>或致电我们: <a href="tel:+1234567890">+86 138-0013-8000</a></span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-logo-section">
        <h3 class="footer-logo-text">X-Sound Studio</h3>
        <p class="footer-description">
          专业音效设计工作室，专注于视频音效、ASMR制作和音效包开发。
          用声音讲述故事，为您的项目注入生命力。
        </p>
      </div>
      
      <div class="footer-social-links">
        <a href="#" aria-label="Dribbble" class="social-icon">DR</a>
        <a href="#" aria-label="Behance" class="social-icon">BE</a>
        <a href="#" aria-label="Instagram" class="social-icon">IG</a>
        <a href="#" aria-label="LinkedIn" class="social-icon">LI</a>
        <a href="#" aria-label="GitHub" class="social-icon">GH</a>
      </div>
      
      <div class="footer-bottom-text">
        <p>© 2025 X-SOUND STUDIO. ALL RIGHTS RESERVED.</p>
        <a href="#top" class="back-to-top-link">Back to top ↑</a>
      </div>
    </div>
  </footer>
</Layout>

<style>
/* Global Variables */
:root {
  --primary-color: #6366f1;
  --secondary-color: #8b5cf6;
  --background-dark: #0a0a0a;
  --background-light: #121212;
  --surface-color: #1a1a1a;
  --text-primary: #ffffff;
  --text-secondary: #b0b0b0;
  --text-muted: #777777;
  --border-color: #2a2a2a;
  --success-color: #10b981;
  --gradient: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
}

/* Navigation Styles */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(10, 10, 10, 0.9);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid var(--border-color);
  z-index: 1000;
  padding: 1rem 0;
  transition: background 0.3s ease;
}

.nav-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo-link {
  text-decoration: none;
}

.logo {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
  letter-spacing: -0.02em;
  background: var(--gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.nav-links {
  display: flex;
  gap: 2rem;
}

.nav-links a {
  color: var(--text-secondary);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.95rem;
  transition: color 0.3s ease;
  position: relative;
}

.nav-links a::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--gradient);
  transition: width 0.3s ease;
}

.nav-links a:hover {
  color: var(--text-primary);
}

.nav-links a:hover::after {
  width: 100%;
}

/* Main Content */
.main-content {
  padding-top: 5rem;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

/* Hero Section */
.hero-section {
  min-height: 100vh;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  background: radial-gradient(ellipse at center, rgba(99, 102, 241, 0.1) 0%, transparent 50%);
}

.hero-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.hero-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
  line-height: 1.1;
  color: var(--text-primary);
  margin-bottom: 1.5rem;
  letter-spacing: -0.02em;
}

.highlight {
  background: var(--gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-description {
  font-size: 1.2rem;
  line-height: 1.6;
  color: var(--text-secondary);
  margin-bottom: 3rem;
  max-width: 500px;
}

.hero-actions {
  display: flex;
  gap: 1.5rem;
  flex-wrap: wrap;
}

.cta-button {
  padding: 1rem 2rem;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.95rem;
  transition: all 0.3s ease;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  border: 2px solid transparent;
}

.cta-button.primary {
  background: var(--gradient);
  color: white;
}

.cta-button.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
}

.cta-button.secondary {
  background: transparent;
  color: var(--text-primary);
  border-color: var(--border-color);
}

.cta-button.secondary:hover {
  border-color: var(--primary-color);
  background: rgba(99, 102, 241, 0.1);
}

.cta-button.large {
  padding: 1.25rem 2.5rem;
  font-size: 1.1rem;
}

/* Hero Visual */
.hero-visual {
  position: relative;
  height: 500px;
}

.floating-elements {
  position: relative;
  width: 100%;
  height: 100%;
}

.element {
  position: absolute;
  border-radius: 50%;
  background: var(--gradient);
  opacity: 0.6;
  animation: float 6s ease-in-out infinite;
}

.element-1 {
  width: 100px;
  height: 100px;
  top: 20%;
  left: 20%;
  animation-delay: 0s;
}

.element-2 {
  width: 150px;
  height: 150px;
  top: 50%;
  right: 10%;
  animation-delay: 2s;
}

.element-3 {
  width: 80px;
  height: 80px;
  bottom: 30%;
  left: 60%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

/* Section Styles */
.section-header {
  text-align: center;
  margin-bottom: 4rem;
  position: relative;
}

.section-header::after {
  content: '';
  position: absolute;
  bottom: -1rem;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 2px;
  background: var(--gradient);
  border-radius: 1px;
}

.section-badge {
  display: inline-block;
  background: rgba(99, 102, 241, 0.1);
  border: 1px solid rgba(99, 102, 241, 0.3);
  color: var(--primary-color);
  padding: 0.5rem 1.5rem;
  border-radius: 50px;
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 1.5rem;
  backdrop-filter: blur(10px);
}

.section-title {
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
  position: relative;
}

.section-subtitle {
  font-size: 1.2rem;
  color: var(--text-secondary);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
  opacity: 0.9;
}

/* Projects Section */
.projects-section {
  position: relative;
  padding: 6rem 0;
  background: var(--background-dark);
  overflow: hidden;
}

.projects-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(99, 102, 241, 0.5) 50%,
    transparent 100%
  );
}

.projects-section .section-header {
  position: relative;
  z-index: 2;
  margin-bottom: 3rem;
}

/* Gallery Filters */
.gallery-filters {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 4rem;
  flex-wrap: wrap;
}

.filter-btn {
  background: transparent;
  border: 2px solid rgba(255, 255, 255, 0.1);
  color: var(--text-secondary);
  padding: 0.75rem 1.5rem;
  border-radius: 50px;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.filter-btn:hover,
.filter-btn.active {
  border-color: var(--primary-color);
  background: rgba(99, 102, 241, 0.1);
  color: var(--text-primary);
  transform: translateY(-2px);
}

/* Work Gallery - Masonry Layout */
.work-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 2rem;
  margin-top: 2rem;
}

.gallery-item {
  break-inside: avoid;
  position: relative;
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.3s ease;
  background: var(--surface-color);
  border: 1px solid var(--border-color);
}

.gallery-item:hover {
  transform: translateY(-8px);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  border-color: rgba(99, 102, 241, 0.3);
}

.gallery-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

.gallery-image {
  position: relative;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.gallery-image img {
  width: 100%;
  height: auto;
  min-height: 250px;
  max-height: 400px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.gallery-item:hover .gallery-image img {
  transform: scale(1.05);
}

.gallery-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(0, 0, 0, 0.3) 40%,
    rgba(0, 0, 0, 0.9) 100%
  );
  opacity: 0;
  transition: all 0.3s ease;
  display: flex;
  align-items: flex-end;
  padding: 2rem;
}

.gallery-item:hover .gallery-overlay {
  opacity: 1;
}

.overlay-content {
  width: 100%;
  color: white;
}

.overlay-content .project-category {
  background: rgba(99, 102, 241, 0.8);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.75rem;
  display: inline-block;
}

.overlay-content .project-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  line-height: 1.2;
}

.overlay-content .project-desc {
  font-size: 0.9rem;
  line-height: 1.4;
  opacity: 0.9;
  margin-bottom: 1rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.project-tech {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.tech-badge {
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
