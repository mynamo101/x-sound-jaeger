---
import Layout from '../layouts/Layout.astro';
// import ImageCarousel from '../components/ImageCarousel.astro'; // 移除轮播
import HeroPost from '../components/HeroPost.astro'; // 导入新的 HeroPost 组件

// 首页静态假数据，后续可用 Markdown 动态生成
interface Post {
  title: string;
  date: string;
  tag: string;
  summary: string;
  link: string;
  image?: string; // 为 HeroPost 添加图片属性
}

const featuredPosts: Post[] = [
  {
