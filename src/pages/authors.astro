const authors: Author[] = [
  {
    id: 'alex-chen',
    name: 'Alex Chen',
    title: 'Founder & Editor-in-Chief',
    bio: 'A passionate writer and technologist with over 8 years of experience in digital content creation and community building. Alex specializes in business strategy and productivity.',
    avatar: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=300&h=300&fit=crop&crop=face',
    social: {
      twitter: 'https://twitter.com/alexchen',
      linkedin: 'https://linkedin.com/in/alexchen',
      website: 'https://alexchen.dev'
    },
    articleCount: 4,
    joinDate: '2024-01-15'
  },
  {
    id: 'sarah-johnson',
    name: 'Sarah Johnson',
    title: 'Creative Director',
    bio: 'A design enthusiast who brings visual stories to life, ensuring every piece of content is as beautiful as it is meaningful. Sarah focuses on design and creative content.',
    avatar: 'https://images.unsplash.com/photo-1494790108755-2616b612b47c?w=300&h=300&fit=crop&crop=face',
    social: {
      twitter: 'https://twitter.com/sarahdesigns',
      linkedin: 'https://linkedin.com/in/sarahjohnson'
    },
    articleCount: 2,
    joinDate: '2024-02-01'
  },
  {
    id: 'david-park',
    name: 'David Park',
    title: 'Tech Writer',
    bio: 'A technology expert who translates complex concepts into accessible insights for readers of all backgrounds. David covers lifestyle and travel topics.',
