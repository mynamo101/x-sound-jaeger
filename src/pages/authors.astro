---
import Layout from '../layouts/Layout.astro';

// 生成 URL 友好的 slug
function generateSlug(title: string): string {
  return title
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)/g, '');
}

// 作者接口
interface Author {
  id: string;
  name: string;
  title: string;
  bio: string;
  avatar: string;
  social: {
    twitter?: string;
    linkedin?: string;
    website?: string;
  };
  articleCount: number;
  joinDate: string;
}

// 文章接口
interface Post {
  title: string;
  date: string;
  tag: string;
  summary: string;
  link: string;
  image?: string;
  author: string;
}

